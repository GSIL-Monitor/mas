<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.letv.mas.client.omp.model.dao.AuthorityManagementMapper">

    <resultMap type="com.letv.mas.client.omp.model.dto.UserDto" id="userInfoMap">
        <result column="id" property="id"/>
        <result column="mail" property="mail"/>
        <result column="dept_id" property="dept_id"/>
        <result column="type" property="type"/>
        <result column="status" property="status"/>
        <result column="code" property="code"/>
    </resultMap>

    <sql id="user">
        id,mail,dept_id,type,status,code
    </sql>

    <select id="findAllUsers" resultType="java.lang.Integer">
        select count(*) from letv_sso_user
    </select>

    <select id="findPageUsers" resultMap="userInfoMap" parameterType="com.letv.mas.client.omp.model.dto.UserDto">
        select <include refid="user"/> from letv_sso_user limit #{startIndex},#{size}
    </select>

    <select  id="findUsersByMail" resultMap="userInfoMap" parameterType="com.letv.mas.client.omp.model.dto.UserDto">
        select <include refid="user"/> from letv_sso_user where mail LIKE "%"#{mail}"%"
    </select>

    <update id="updateUserAcl">
        update letv_sso_user set code=#{code} , type=#{type} where id=#{id}
    </update>

    <resultMap type="com.letv.mas.client.omp.model.dto.AclDto" id="AllAcls">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="parent_id" property="_parentId"/>
        <result column="checked" property="checked"/>
        <result column="seq" property="seq"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="acl">
        id,name,path,parent_id,checked,seq,status
    </sql>

    <select id="findAllAcls" resultMap="AllAcls">
        SELECT <include refid="acl"/> FROM letv_acl
    </select>

    <delete id="deleteAcl">
        delete from letv_acl where id=#{id}
    </delete>

    <update id="updateAcl">
        update letv_acl set name=#{name} , path=#{path} , parent_id=#{_parentId} where id=#{id}
    </update>

    <insert id="insertAcl">
        INSERT INTO `letv_acl`
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="name !=null">
                `name`,
            </if>
            <if test="path !=null">
                `path`,
            </if>
            <if test="_parentId !=null">
                `parent_id`,
            </if>
        </trim>

        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="name != null ">
                #{name},
            </if>
            <if test="path !=null">
                #{path},
            </if>
            <if test="_parentId !=null">
                #{_parentId},
            </if>
        </trim>
    </insert>

</mapper>